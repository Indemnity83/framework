{
    "name": "solder/framework",
    "require": {
        "php": "^7.1",
        "illuminate/support": "^5.7"
    },
    "require-dev": {
        "larapack/dd": "^1.0",
        "phpunit/phpunit": "^7.0"
    },
    "autoload": {
        "psr-4": {
            "Solder\\Framework\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Solder\\Framework\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"

    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Solder\\Framework\\ServiceProvider"
            ]
        }
    }
}
